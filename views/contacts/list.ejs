<% include ../header.ejs %>
<table class="table table-bordered table-hover">
    <tr>
        <th>이름</th>
        <th>작성일</th>
        <th>삭제</th>
    </tr>
    <% contacts.forEach(function(contact) { %>
    <tr>
        <th>
            <a href="/contacts/detail/<%=contact.id%>">
                <%=contact.name%>
            </a>
        </th>
        <th>
            <%=contact.getDate.year%>-<%=contact.getDate.month%>-<%=contact.getDate.day%>
        </th>
        <th>
            <a href="/contacts/delete/<%=contact.id%>" class="btn btn-danger">삭제</a>
        </th>
    </tr>
    
    <% }) %>
</table>
<a href="/contacts/write" class="btn btn-primary">작성하기</a>
<% include ../footer.ejs %>